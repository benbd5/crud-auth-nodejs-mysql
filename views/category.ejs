<%- include('partials/header.ejs') %>
<%- include('partials/navbar.ejs') %>

<h1 class="text-center"><%= singleCategory.name %> </h1>

<% if (categories.length < 1) { %>
<h2 class="text-center">Il n'y a rien aucun report pour ce département</h2>
<% } %>

<div class="container">
    <div class="row">
        <% categories.forEach(category => { %>

        <div class="col-xl-4 col-md-6 d-flex justify-content-center">
            <div class="card modif">
                <img src="/uploads/<%= category.image %> " class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title"><%= category.title %> </h5>
                    <p class="card-text"><%= category.description %> </p>
                    <p class="card-text"> Publié le : <%= moment(category.dateAdd).format('DD/MM/YYYY') %> </p>
                </div>
                <a href="/liste-des-articles/<%= category.articleId %> " class="btn btn-primary">Lire la
                    suite...</a>
            </div>
        </div>

        <% }) %>

    </div>
</div>

<%- include('partials/footer.ejs') %>