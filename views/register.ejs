<%- include('partials/header.ejs') %>
<%- include('partials/navbar.ejs') %>

<div class="container">
  <div class="row ">

    <div class="col">
      <!-- Sign in -->

      <!-- Email déjà utilisé -->
      <% if (messageEmailUsed.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= messageEmailUsed %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      <% } %>

      <!-- Tous les champs ne sont pas remplis -->
      <% if (messageFields.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= messageFields %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      <% } %>

      <!-- Les mots de passe ne sont pas identiques -->
      <% if (messageDoubleChekMdp.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= messageDoubleChekMdp %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      <% } %>



      <!-- Formulaire d'inscription -->

      <section class="register">
        <div class="container">
          <div class="row d-flex justify-content-center text-center">
            <h2>Inscription</h2>
            <hr class="littleHr">
          </div>

          <div class="row d-flex justify-content-center">
            <form class="form-register" action="/auth/register" method="POST">

              <div class="row">
                <!-- Lastname -->
                <div class="col-md-6">
                  <div class="form-group mb-3">
                    <label for="lastnameRegister" class="mb-1">Nom</label>
                    <input type="text" class="form-control form__input" name="lastname" placeholder="Votre nom"
                      id="lastnameRegister" <% if (locals.form) { %> value="<%= locals.form.lastname %>" <% } %>>
                  </div>
                </div>

                <!-- Firstname -->
                <div class="col-md-6">
                  <div class="form-group mb-3">
                    <label for="firstnameRegister" class="mb-1">Prénom</label>
                    <input type="text" class="form-control form__input" name="firstname" placeholder="Votre prénom"
                      id="firstnameRegister" <% if (locals.form) { %> value="<%= form.firstname %>" <% } %>>
                  </div>
                </div>
              </div>

              <!-- Email -->
              <div class="form-group mb-3">
                <label for="emailRegister" class="mb-1">Email</label>
                <input type="email" class="form-control form__input" name="email" placeholder="Votre email"
                  id="emailRegister" <% if (locals.form) { %> value="<%= form.email %>" <% } %>>
              </div>

              <!-- Password -->
              <div class="form-group mb-3">
                <label for="password" class="mb-1">Mot de passe</label>
                <input type="password" class="form-control form__input" name="password" placeholder="Votre mot de passe"
                  id="password">
              </div>

              <!-- Confirm password -->
              <div class="form-group mb-3">
                <label for="confirmPassword" class="mb-1">Confirmer le mot de passe</label>
                <input type="password" class="form-control form__input" name="confirmPassword"
                  placeholder="Confirmez votre mot de passe" id="confirmPassword">
              </div>

              <button type="submit" class="btn btn-primary">S'inscrire</button>
            </form>

          </div>
        </div>
      </section>
    </div>
  </div>
</div>

<%- include('partials/footer.ejs') %>